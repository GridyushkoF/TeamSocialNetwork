<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="createUserTable" author="Sergei Ragaev">
        <createTable tableName="users">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="varchar (255)"/>
            <column name="first_name" type="varchar (255)"/>
            <column name="last_name" type="varchar (255)"/>
            <column name="role" type="varchar (255)"/>
            <column name="password" type="varchar (255)"/>
        </createTable>
    </changeSet>

    <changeSet id="createPasswordResetTokensTable" author="Sergei Ragaev">
        <createTable tableName="password_reset_tokens">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="expiry_date" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="user_id" type="BIGINT"/>
            <column name="token" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="createFKForPasswordResetTokensTable" author="Sergei Ragaev">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="password_reset_tokens" constraintName="fk_user_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="users" validate="true"/>
    </changeSet>


</databaseChangeLog>