            <column name="role" value="ADMIN"/>
            <column name="is_blocked" value="false"/>
            <column name="is_online" value="false"/>
            <column name="is_deleted" value="false"/>
        </insert>
    </changeSet>
    <changeSet id="updateSequenceOfUserTable" author="Sergei Ragaev" >
        <sql dbms="postgresql" endDelimiter=";">ALTER SEQUENCE users_id_seq restart with 2;
        </sql>
    </changeSet>
    <changeSet id="createPasswordResetTokenTable" author="Sergei Ragaev" >
        <createTable tableName="password_reset_tokens">
            <column name="expiry_date" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT"/>
            <column name="token" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="createFKForPasswordResetTokenTable" author="Sergei Ragaev" >
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="password_reset_tokens" constraintName="fk_user_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="users" validate="true"/>
    </changeSet>
</databaseChangeLog>