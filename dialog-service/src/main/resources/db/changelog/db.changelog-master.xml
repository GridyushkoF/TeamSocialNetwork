<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-message-table" author="Gridyushko Fedor">
        <createTable tableName="message">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="message_pkey"/>
            </column>
            <column name="time" type="BIGINT"/>
            <column name="author_id" type="BIGINT"/>
            <column name="recipient_id" type="BIGINT"/>
            <column name="message_text" type="VARCHAR(255)"/>
            <column name="status" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="create-dialog-table" author="Gridyushko Fedor">
        <createTable tableName="dialog">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="dialog_pkey"/>
            </column>
            <column name="unread_count" type="BIGINT"/>
            <column name="member1_id" type="BIGINT"/>
            <column name="member2_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="add-foreign-key-constraints-to-dialog" author="Gridyushko Fedor">
        <addForeignKeyConstraint
            baseColumnNames="member1_id"
            baseTableName="dialog"
            constraintName="fk_dialog_member1_id"
            deferrable="false" initiallyDeferred="false"
            onDelete="NO ACTION" onUpdate="NO ACTION"
            referencedColumnNames="id"
            referencedTableName="users"
            validate="true"/>
        <addForeignKeyConstraint
            baseColumnNames="member2_id"
            baseTableName="dialog"
            constraintName="fk_dialog_member2_id"
            deferrable="false"
            initiallyDeferred="false"
            onDelete="NO ACTION"
            onUpdate="NO ACTION"
            referencedColumnNames="id"
            referencedTableName="users"
            validate="true"/>
    </changeSet>

</databaseChangeLog>