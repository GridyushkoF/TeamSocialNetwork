<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-message-table" author="Gridyushko Fedor">
        <createTable tableName="messages">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="dialog_id" type="BIGINT"/>
            <column name="time" type="TIMESTAMP  WITHOUT TIME ZONE"/>
            <column name="author_id" type="BIGINT"/>
            <column name="recipient_id" type="BIGINT"/>
            <column name="message_text" type="VARCHAR(255)"/>
            <column name="status" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="create-dialog-table" author="Gridyushko Fedor">
        <createTable tableName="dialogs">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="unread_count" type="BIGINT"/>
            <column name="member1_id" type="BIGINT"/>
            <column name="member2_id" type="BIGINT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>