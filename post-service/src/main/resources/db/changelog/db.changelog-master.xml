<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--    BASE_STRUCTURE-->
    <changeSet id="createPostTable" author="Sergei Ragaev">
        <createTable tableName="posts">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="author_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_blocked" type="BOOLEAN"/>
            <column name="is_delete" type="BOOLEAN"/>
            <column name="publish_date" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="time" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="time_changed" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="image_path" type="VARCHAR(255)"/>
            <column name="post_text" type="TEXT"/>
            <column name="title" type="VARCHAR(255)"/>
            <column name="type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="my_like" type="BOOLEAN"/>
        </createTable>
    </changeSet>

    <changeSet id="createPost2TagTable" author="Sergei Ragaev">
        <createTable tableName="post2tag">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="post_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="createTagTable" author="Sergei Ragaev">
        <createTable tableName="tags">
            <column name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="createKeyForPost2TagTable" author="Sergei Ragaev">
        <addForeignKeyConstraint baseColumnNames="post_id" baseTableName="post2tag" constraintName="fk_post_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="posts" validate="true"/>
        <addForeignKeyConstraint baseColumnNames="tag_id" baseTableName="post2tag" constraintName="fk_tag_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="tags" validate="true"/>
    </changeSet>
    <changeSet id="createCommentTable" author="Sergei Ragaev">
        <createTable tableName="comments">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="is_blocked" type="BOOLEAN"/>
            <column name="is_delete" type="BOOLEAN"/>
            <column name="author_id" type="BIGINT"/>
            <column name="parent_id" type="BIGINT"/>
            <column name="post_id" type="BIGINT"/>
            <column name="time" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="time_changed" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="comment_text" type="TEXT"/>
            <column name="comment_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="image_path" type="VARCHAR(255)"/>
            <column name="my_like" type="BOOLEAN"/>
        </createTable>
    </changeSet>
    <changeSet id="createLikeTable" author="Sergei Ragaev">
        <createTable tableName="likes">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="comment_id" type="BIGINT"/>
            <column name="post_id" type="BIGINT"/>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="createForeignKeysForLikeTable" author="Sergei Ragaev">
        <addForeignKeyConstraint baseColumnNames="comment_id" baseTableName="likes" constraintName="fk_comment_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="comments" validate="true"/>
        <addForeignKeyConstraint baseColumnNames="post_id" baseTableName="likes" constraintName="fk_post_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="posts" validate="true"/>
    </changeSet>
    <changeSet id="likesStructureUpdate" author="Gridyushko Fedor">
        <dropColumn tableName="likes" columnName="comment_id"/>
        <dropColumn tableName="likes" columnName="post_id"/>
        <addColumn tableName="likes">
            <column name="entity_type" type="VARCHAR(255)"/>
            <column name="entity_id" type="BIGINT"/>
        </addColumn>
    </changeSet>
    <changeSet id="createPostsLikesTable" author="Gridyushko Fedor">
        <createTable tableName="posts_likes">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>>
            </column>
            <column name="post_id" type="BIGINT"/>
            <column name="like_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="createCommentsLikesTable" author="Gridyushko Fedor">
        <createTable tableName="comments_likes">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>>
            </column>
            <column name="comment_id" type="BIGINT"/>
            <column name="like_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="createReactionsEnumInLikes" author="Gridyushko Fedor">
        <addColumn tableName="likes">
            <column name="reaction_type" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="removeMyLikeFromBd" author="Gridyushko Fedor">
        <dropColumn tableName="posts">
            <column name="my_like"/>
        </dropColumn>
    </changeSet>
    <changeSet id="addCreationDateToLike" author="Gridyushko Fedor">
        <addColumn tableName="likes">
            <column name="creation_date_time" type="datetime">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>