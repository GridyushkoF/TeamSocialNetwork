<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--    BASE_STRUCTURE-->
    <changeSet id="createPostTable" author="Sergei Ragaev">
        <createTable tableName="posts">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="author_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_blocked" type="BOOLEAN"/>
            <column name="is_delete" type="BOOLEAN"/>
            <column name="publish_date" type="TIMESTAMP  WITHOUT TIME ZONE"/>
            <column name="time" type="TIMESTAMP  WITHOUT TIME ZONE"/>
            <column name="time_changed" type="TIMESTAMP  WITHOUT TIME ZONE"/>
            <column name="image_path" type="VARCHAR(255)"/>
            <column name="post_text" type="TEXT"/>
            <column name="title" type="VARCHAR(255)"/>
            <column name="type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="my_like" type="BOOLEAN"/>
        </createTable>
    </changeSet>
    <changeSet id="createCommentTable" author="Sergei Ragaev">
        <createTable tableName="comments">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="is_blocked" type="BOOLEAN"/>
            <column name="is_delete" type="BOOLEAN"/>
            <column name="author_id" type="BIGINT"/>
            <column name="parent_id" type="BIGINT"/>
            <column name="post_id" type="BIGINT"/>
            <column name="time" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="time_changed" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="comment_text" type="TEXT"/>
            <column name="comment_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="image_path" type="VARCHAR(255)"/>
            <column name="my_like" type="BOOLEAN"/>
            <column name="likes_amount" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="createLikeTable" author="Sergei Ragaev">
        <createTable tableName="likes">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="comment_id" type="BIGINT"/>
            <column name="post_id" type="BIGINT"/>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="createForeignKeysForLikeTable" author="Sergei Ragaev">
        <addForeignKeyConstraint baseColumnNames="comment_id" baseTableName="likes" constraintName="fk_comment_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="comments" validate="true"/>
        <addForeignKeyConstraint baseColumnNames="post_id" baseTableName="likes" constraintName="fk_post_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="posts" validate="true"/>
    </changeSet>
<!--    BASE_STRUCTURE-->
    <changeSet id="updatePostTableToAddNewFields" author="Gridyushko Fedor">
        <addColumn tableName="posts">
            <column name="comments_count" type="BIGINT"/>
            <column name="like_amount" type="BIGINT"/>
        </addColumn>
        <createTable tableName="post_tags">
            <column name="post_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tag" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="post_likes">
            <column name="post_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="like_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_post_tags_post_id"
                                 baseTableName="post_tags" baseColumnNames="post_id"
                                 referencedTableName="posts" referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_post_likes_post_id"
                                 baseTableName="post_likes" baseColumnNames="post_id"
                                 referencedTableName="posts" referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_post_likes_like_id"
                                 baseTableName="post_likes" baseColumnNames="like_id"
                                 referencedTableName="likes" referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="updateCommentsTableForNewStructure" author="Gridyushko Fedor">
        <createTable tableName="comment_likes">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="comment_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="like_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_comments_post_id"
                                 baseTableName="comments" baseColumnNames="post_id"
                                 referencedTableName="posts" referencedColumnNames="id"
                                 onDelete="NO ACTION"/>
        <addForeignKeyConstraint constraintName="fk_comment_likes_comment_id"
                                 baseTableName="comment_likes" baseColumnNames="comment_id"
                                 referencedTableName="comments" referencedColumnNames="id"
                                 onDelete="NO ACTION"/>

        <addForeignKeyConstraint constraintName="fk_comment_likes_like_id"
                                 baseTableName="comment_likes" baseColumnNames="like_id"
                                 referencedTableName="likes" referencedColumnNames="id"
                                 onDelete="NO ACTION"/>
    </changeSet>
    <changeSet id="likesStructureUpdate" author="Gridyushko Fedor">
        <dropColumn tableName="likes" columnName="comment_id"/>
        <dropColumn tableName="likes" columnName="post_id"/>
        <addColumn tableName="likes">
            <column name="entity_type" type="VARCHAR(255)"/>
            <column name="entity_id" type="BIGINT"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>