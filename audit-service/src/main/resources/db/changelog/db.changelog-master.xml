<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="createAuditTableStructure" author="Gridyushko Fedor">
        <createTable tableName="audit_logs">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="entity_name" type="VARCHAR(255)" />
            <column name="action_type" type="VARCHAR(255)" />
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="addUserIdToAuditTable" author="Gridyushko Fedor">
            <addColumn tableName="audit_logs">
                <column name="userId" type="BIGINT"/>
            </addColumn>
    </changeSet>
</databaseChangeLog>