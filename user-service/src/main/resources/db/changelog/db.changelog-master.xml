<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="createFriendshipTable" author="Sergei Ragaev">
        <createTable tableName="friendship">
            <column name="account_id_from" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="friendship_pkey"/>
            </column>
            <column name="account_id_to" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="friendship_pkey"/>
            </column>
            <column name="status_code" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="createForeignKeysForFriendshipTable" author="Sergei Ragaev">
        <addForeignKeyConstraint baseColumnNames="account_id_from" baseTableName="friendship" constraintName="fk_account_id_from" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="users" validate="true"/>
        <addForeignKeyConstraint baseColumnNames="account_id_to" baseTableName="friendship" constraintName="fk_account_id_to" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="users" validate="true"/>
    </changeSet>

</databaseChangeLog>